<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".SymptomsTracking">

        <TextView
            android:id="@+id/mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/josefin_slab_semibold"
            android:textColor="@color/black"
            android:text="How are you feeling today?"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/josefin_slab_semibold"
            android:textColor="@color/black"
            android:text="What symptoms are you feeling today?"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/acne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acne"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/anxiety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anxiety"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/acne"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/bloating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bloating"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/anxiety"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/bodyaches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Aches"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/bloating"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/tenderness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breast Tenderness"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/bodyaches"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/cramping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cramping"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/tenderness"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/depression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depression"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/cramping"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/diarrhea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diarrhea"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/depression"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/irritable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easily Irritated"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/diarrhea"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/fatigue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatigue"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/irritable"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/headache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Headache"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/fatigue"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/flashes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot Flashes"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/headache"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/hunger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hungry/Cravings"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/flashes"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/libido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Libido"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/hunger"
            tools:ignore="MissingConstraints" />

        <CheckBox
            android:id="@+id/sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changes in Sleep"
            android:fontFamily="@font/josefin_slab_semibold"
            android:layout_gravity= "right"
            app:layout_constraintTop_toBottomOf="@id/libido"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Symptoms"
            android:onClick="pavlova"
            android:textColor="@color/white"
            android:textColorHighlight="@color/caper"
            android:textSize="20sp"
            android:elevation="3dp"
            android:fontFamily="@font/josefin_slab_semibold"
            android:background="@color/quincy"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/sleep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backtoScrollSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/homeicon"
            android:text="Back to Home"
            android:onClick="pavlova"
            android:textColor="@color/white"
            android:textColorHighlight="@color/caper"
            android:textSize="20sp"
            android:elevation="3dp"
            android:fontFamily="@font/josefin_slab_semibold"
            android:background="@color/quincy"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/submitButton" />

        <ImageButton
            android:id="@+id/neutral"
            android:layout_width="105dp"
            android:layout_height="108dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@+id/happy"
            app:layout_constraintStart_toEndOf="@+id/frown"
            app:layout_constraintTop_toBottomOf="@+id/mood"
            app:srcCompat="@drawable/neutral_foreground" />

        <ImageButton
            android:id="@+id/happy"
            android:layout_width="105dp"
            android:layout_height="108dp"
            android:layout_marginTop="44dp"
            app:tint="@color/black"
            app:layout_constraintStart_toEndOf="@id/neutral"
            app:layout_constraintTop_toBottomOf="@+id/mood"
            app:srcCompat="@drawable/happy_foreground" />

        <ImageButton
            android:id="@+id/frown"
            android:layout_width="105dp"
            android:layout_height="108dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/mood"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/frown_foreground" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
